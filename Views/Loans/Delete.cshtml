@model Books.Models.Loan

@{
    ViewData["Title"] = "Delete";
}

<h1>Ta bort ulåning</h1>

<h3>Ta bort om boken är tillbakalämnad</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Boktitel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class="col-sm-2">
            Utlånad till
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrower)
        </dd>
        <dt class="col-sm-2">
            Utlåningsdatum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowed)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ja, tillbakalämnad!" class="btn btn-primary" /> |
        <a asp-action="Index">Tillbaka</a>
    </form>
</div>
